{% extends 'base.html.twig' %}

{% block title %}
	Contact
{% endblock %}

{% block body %}
	<div class="product-big-title-area">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="product-bit-title text-center">
						<h2>Contact</h2>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="maincontent-area">
		<div class="container">
			<div class="row">
				<div class="col-md-4"></div>
				<div class="col-md-4">
					{{ form_start(form) }}
					<div class="form-group row">
						<form method="post" action="{{ path ('index')}}">
							<div class="form-group">
								<div class="text-black">
									<span class="text-danger">*</span>
									{{ form_label(form.firstname)}}
								</div>
								{{ form_widget(form.firstname,{ 'attr': {'size': '52'} }) }}
							</div>

							<div class="form-group">
								<div class="text-black">
									<span class="text-danger">*</span>
									{{ form_label(form.lastname)}}
								</div>
								{{ form_widget(form.lastname,{ 'attr': {'size': '52'} }) }}
							</div>
							<div class="form-group">
								<div class="text-black">
									<span class="text-danger">*</span>
									{{ form_label(form.email)}}
								</div>
								{{ form_widget(form.email,{ 'attr': {'size': '52'} }) }}
							</div>
							<div class="form-group">
								<div class="text-black">
									<span class="text-danger">*</span>
									{{ form_label(form.message)}}
								</div>
								{{ form_widget(form.message,{ 'attr': {'cols': '51'} }) }}
							</div>
							<div class="form-group">
								<div class="text-black">

									<input type="submit" value="Send Message" class="btn btn-primary" style="width: 60%;">

								</div>
							</div>
							{{ form_end(form) }}
						</form>
					</div>
				</div>
				<div class="col-md-4"></div>
			</div>
		</div>
	</div>
{% endblock %}
