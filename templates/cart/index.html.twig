{% extends 'base.html.twig' %}

{% block title %}Cart
{% endblock %}

{% block body %}
	<div class="product-big-title-area">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="product-bit-title text-center">
						<h2>Shopping Cart</h2>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="single-product-area">
		<div class="zigzag-bottom"></div>
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					{% if items | length > 0 %}
						<div class="product-content-right">
							<div class="woocommerce">
								<form method="post" action="{{path('checkout')}}">
									<table cellspacing="0" class="shop_table cart">
										<thead>
											<tr>

												<th class="product-thumbnail">&nbsp;</th>
												<th class="product-name">Product</th>
												<th class="product-price">Price</th>
												<th class="product-quantity">Quantity</th>
												<th class="product-subtotal">Total</th>
												<th class="product-remove">&nbsp;</th>

											</tr>
										</thead>
										<tbody>
											{% for item in items %}
												<tr class="cart_item">
													<td class="product-thumbnail">
														<a href=""><img width="145" height="145" alt="poster_1_up" class="shop_thumbnail" src="{{asset('theme/img/')}}{{ item.product.image }}"></a>
													</td>

													<td class="product-name">
														<a href="single-product.html">{{item.product.name}}</a>
													</td>

													<td class="product-price">
														<span class="amount">{{item.product.price}}</span>
													</td>

													<td class="product-quantity">
														<div class="quantity buttons_added">
															<input type="number" size="4" class="input-text qty text" title="Qty" value="{{item.quantity}}">
														</div>
													</td>

													<td class="product-subtotal">
														<span class="amount">{{item.product.price * item.quantity}}</span>
													</td>
													<td class="product-remove">
														<a href="{{path('cart_remove',{'id':item.product.id})}}" class="btn btn-danger btn-sn">
															<i>Remove</i>
														</a>
													</td>
												</tr>
											{% endfor %}


										</tbody>
									</table>

									<div class="cart_totals ">
										<h2>Cart Totals</h2>

										<table cellspacing="0">
											<tbody>
												<tr class="cart-subtotal">
													<th>Cart Subtotal</th>
													<td>
														<span class="amount">{{total}}</span>
													</td>
												</tr>
												<tr class="order-total">
													<th>Order Total</th>
													<td>
														<strong>
															<span class="amount">{{total}}.DT</span>
														</strong>
													</td>
												</tr>
												<tr>
													<th></th>
													<td class="actions" colspan="2">

														<a href="{{path('checkout')}}"><input type="submit" value="Checkout"></a>
													</td>
												</tr>
											</tbody>
										</table>

									</div>
								</form>
								<div class="cart_totals ">
									<a href="{{path('product')}}"><input type="submit" value="Continue Shoping" name="Continue Shoping" class="button"></a>
									<a href="{{path('cart')}}"><input type="submit" value="Update Cart" name="update_cart" class="button"></a>
								</div>
							</div>
						</div>
					{% else %}
						<h1>Surprise, Your cart is empty !</h1>
						<a href="{{path('product')}}"><input type="submit" value="Continue Shoping" name="Continue Shoping" class="button"></a>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
