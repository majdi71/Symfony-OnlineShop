{% extends 'base.html.twig' %}

{% block title %}Ustore
{% endblock %}
{% block body %}

	<div
		class="slider-area">
		<!-- Slider -->
		<div class="block-slider block-slider4">
			<ul id="bxslider-home4">
				<li><img src="{{asset('theme/img/iphone122.jpeg')}}" height="200" alt="Slide">
					<div class="caption-group">
						<h2 class="caption title">
							<span style="color:red">
								<strong>IPhone 12/12Pro</strong>
							</span>
						</h2>

						<a class="caption button-radius" href="{{path('product')}}">
							<span class="icon"></span>Shop now</a>
					</div>
				</li>
				<li>
					<img src="{{asset('theme/img/xxx.gif')}}" height="200" width="800" alt="Slide">

				</li>
				<li>
					<img src="{{asset('theme/img/xx.jpeg')}}" height="200" alt="Slide">
					<div class="caption-group">
						<h2 class="caption title">

							<span style="color:orange">
								<strong>IPhone 11 Pro</strong>
							</span>
						</h2>

						<a class="caption button-radius" href="{{path('product')}}">
							<span class="icon"></span>Shop now</a>
					</div>
				</li>
				<li>
					<img src="{{asset('theme/img/xx.gif')}}" height="200" width="800" alt="Slide">

				</li>

			</ul>
		</div>
		<!-- ./Slider -->
	</div>
	<!-- End slider area -->
	<div class="promo-area">
		<div class="zigzag-bottom"></div>
		<div class="container">
			<div class="row">
				<div class="col-md-3 col-sm-6">
					<div class="single-promo promo1">
						<i class="fa fa-refresh"></i>
						<p>30 Days return</p>
					</div>
				</div>
				<div class="col-md-3 col-sm-6">
					<div class="single-promo promo2">
						<i class="fa fa-truck"></i>
						<p>Free shipping</p>
					</div>
				</div>
				<div class="col-md-3 col-sm-6">
					<div class="single-promo promo3">
						<i class="fa fa-lock"></i>
						<p>Secure payments</p>
					</div>
				</div>
				<div class="col-md-3 col-sm-6">
					<div class="single-promo promo4">
						<i class="fa fa-gift"></i>
						<p>New products</p>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- End brands area -->

	<!-- End promo area -->
	<div class="maincontent-area">
		<div class="zigzag-bottom"></div>
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="latest-product">
						<h2 class="section-title">Latest Products</h2>
						<div class="product-carousel">
							{% for product in products %}
								<div class="single-product">
									<div class="product-f-image">
										<img src="{{asset('theme/img/')}}{{ product.image }}" alt="{{ product.name}}">
										<div class="product-hover">
											<a href="{{path('cart_add',{'id':product.id})}}" class="add-to-cart-link">
												<i class="fa fa-shopping-cart"></i>
												Add to cart</a>
											<a href="{{path('details',{'id':product.id})}}" class="view-details-link">
												<i class="fa fa-link"></i>
												See details</a>
										</div>
									</div>

									<h2>
										<a href="{{path('details',{'id':product.id})}}">{{ product.name}}</a>
									</h2>

									<div class="product-carousel-price">
										<ins>{{ product.price }}.DT</ins>
										<del></del>
									</div>
								</div>
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- End main content area -->
	<div class="brands-area">

		<h2 class="section-title" style="color:black">
			Brand</h2>

		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="brand-wrapper">
						<div class="brand-list">
							<img src="{{asset('theme/img/brand1.png')}}" alt="">
							<img src="{{asset('theme/img/brand2.png')}}" alt="">
							<img src="{{asset('theme/img/brand3.png')}}" alt="">
							<img src="{{asset('theme/img/brand4.png')}}" alt="">
							<img src="{{asset('theme/img/brand5.png')}}" alt="">
							<img src="{{asset('theme/img/brand6.png')}}" alt="">

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
